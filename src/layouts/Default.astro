---
import MainHeader from "../components/MainHeader.vue"
import MainNav from "../components/MainNav.vue"
import Main from "../components/Main.vue"
import MainFooter from "../components/MainFooter.vue"

const { title, href, description } = Astro.props
---


<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="dark light">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="google" value="notranslate">
  </head>
  <body class="flex flex-wrap min-h-screen font-mono">
    <MainHeader class="order-1 md:order-2 w-full md:w-1/2 2xl:w-2/3 md:min-h-screen-px p-8 border-b">
      <MainNav href={href} />
      <slot name="header"></slot>
    </MainHeader>
    <Main class="order-2 md:order-1 w-full md:w-1/2 2xl:w-1/3 md:min-h-screen-px p-8 border-b md:border-r">
      <slot name="main"></slot>
    </Main>
    <MainFooter class="order-3 w-full">
      <slot name="footer"></slot>
    </MainFooter>
  </body>
</html>

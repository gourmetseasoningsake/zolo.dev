---
import "../global.css"
import LayoutDefault from "../layouts/Default.astro"
import Heading from "../components/Heading.vue"
import Division from "../components/Division.vue"
import Paragraph from "../components/Paragraph.vue"
import HCard from "../components/HCard.vue"
import HCardFname from "../components/HCardFname.vue"
import HCardLname from "../components/HCardLname.vue"
import HCardEmail from "../components/HCardEmail.vue"
import HCardLink from "../components/HCardLink.vue"
import Speak from "../components/Speak.vue"
import {navGroups, getNavItemByPath} from "../navigation";

const currentNavItem = getNavItemByPath(navGroups.header, "/");
const preloads = [
  {
   href: "/assets/JetBrainsMono-VariableFont_wght.woff2",
   as: "font",
   crossorigin: "anonymous",
  }
];
const jsonLd = [
  {
    "@context": "http://www.schema.org",
    "@type": "LocalBusiness",
    "name": "Jérôme Imfeld",
    "url": "https://zolo.dev",
    "sameAs": [
       "https://github.com/gourmetseasoningsake"
    ],
    "description": currentNavItem.metaDescription,
    "address": {
       "@type": "PostalAddress",
       "addressLocality": "Opfikon",
       "addressRegion": "Zürich",
       "postalCode": "8152",
       "addressCountry": "Schweiz"
    }
  }
];
---

<LayoutDefault
  path={currentNavItem.path}
  metaTitle={currentNavItem.metaTitle}
  metaDescription={currentNavItem.metaDescription}
  preloads={preloads}
  jsonLd={jsonLd}>
  <Division px my slot="main">
    <Heading is="h1">Ahoi</Heading>
  </Division>
  <HCard slot="main">
    <Division px my>
      <Paragraph>
        Ich bin <HCardFname lang="fr">Jérôme</HCardFname><sup class="text-action-fg" aria-hidden="true">*</sup> <HCardLname>Imfeld</HCardLname>. Ich bin Web-Entwickler und erarbeite Lösungen für kleine Unternehmungen, die ihre Internetpräsenz verbessern oder Arbeitsflüsse digitalisieren möchten. Ich tue das seit 7 Jahren, als Teil eines bestehenden Teams oder als Lieferant einzelner Sachen.
      </Paragraph>
    </Division>
    <Division px my>
      <HCardEmail
        class="block my-2 sm:my-1"
        email="ahoi@zolo.dev"
        title="E-Mail"
        rel="me"
        focus>
        e-mail: ahoi@<span lang="en">zolo</span>.dev
      </HCardEmail>
      <HCardLink
        class="block my-2 sm:my-1"
        href="https://threema.id/8UFC3385"
        title="Threema"
        rel="me noreferrer"
        focus>
        <span lang="en">threema</span>: 8UFC3385
      </HCardLink>
      <HCardLink
        class="block my-2 sm:my-1"
        href="https://github.com/gourmetseasoningsake"
        title="Github"
        rel="me noreferrer"
        focus>
        <span lang="en">github</span>: <span lang="en">gourmetseasoningsake</span>
      </HCardLink>
      <Speak
        client:load
        class="block"
        text="Jérôme"
        placeholder="*: /ʒe.ʁom/"
        lang="fr-FR"
        fallback="https://fr-audio.howtopronounce.com/1618555814607933a68bf4f.mp3"
        focus>
      </Speak>
    </Division>
  </HCard>
</LayoutDefault>